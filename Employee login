    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String sql="select * from EMPLOYEE where  EMPID=?  and PWD=?";
        try
        {
            pst=Con.prepareStatement(sql);
            pst.setString(1,jPasswordField1.getText());
            pst.setString (2,jPasswordField2.getText());
            rs=pst.executeQuery();
            if(rs.next()){
                JOptionPane.showMessageDialog(null,"Welcome "+rs.getString("fname")+ ", Let's make the most out of today!");
                int empid = Integer.parseInt(jPasswordField1.getText());
                Uf4 ee=new Uf4(oid,empid);
                ee.setVisible(true);
                this.dispose();
                     }
            else
            {
                JOptionPane.showMessageDialog(null,"could not sign in");
            }
        }
        catch(Exception e)
        {
        }
    }         

